<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skin Type Management</title>
    <!-- Add links to your CSS files here -->
</head>
<body>
    <h1>Skin Type Management</h1>

    <!-- Form for Adding a New Skin Type -->
    <h2>Add a New Skin Type</h2>
    <form id="add-Skin Type-form" action="/Skin Types/add" method="POST">

        <label for="description">Description:</label>
        <textarea id="description" name="description"></textarea>

        <input type="submit" value="Add Skin Type">
    </form>

    <!-- Search Form for Skin Types -->
    <h2>Search Skin Types</h2>
    <form action="/Skin Types" method="get">
        <label for="searchQuery">Search:</label>
        <input type="text" id="searchQuery" name="search" value="{{searchQuery}}">
        <input type="submit" value="Search">
    </form>

    <!-- Table for Displaying Skin Types -->
    <h2>Available Skin Types</h2>
    <table id="Skin Type-table">
        <thead>
            <tr>
                <th>Skin Type ID</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each Skin Types}}
            <tr>
                <td>{{this.Skin TypeID}}</td>
                <td>{{this.description}}</td>
                <td>
                    <!-- Edit and Delete Buttons -->
                    <button onclick="toggleEditForm('edit-form-{{this.Skin TypeID}}')">Edit</button>
                    <button data-id="{{this.Skin TypeID}}" onclick="deleteSkin Type(this)">Delete</button>
                </td>
            </tr>
            <tr id="edit-form-{{this.Skin TypeID}}" style="display:none;">
                <td colspan="6">
                    <!-- Edit Form -->
                    <form action="/Skin Types/update/{{this.Skin TypeID}}" method="post">
                        <input type="text" name="description" value="{{this.description}}">
                        <button type="submit">Save</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <script>
        function deleteSkin Type(button) {
            var Skin TypeId = button.getAttribute('data-id');
            if (confirm('Are you sure you want to delete this Skin Type?')) {
                fetch('/Skin Types/delete', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ Skin TypeID: Skin TypeId })
                })
                .then(response => {
                    if (response.ok) { button.closest('tr').remove(); }
                    else { alert('Failed to delete the Skin Type.'); }
                })
                .catch(error => { console.error('Error:', error); });
            }
        }

        function toggleEditForm(formId) {
            var form = document.getElementById(formId);
            form.style.display = (form.style.display === 'none') ? 'table-row' : 'none';
        }
    </script>
</body>
</html>
